<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:top="0.8dp"
                android:right="0dp"
                android:bottom="0dp"
                android:left="0dp"/>
            <solid android:color="@color/colorShadow"/>
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                android:left="0dp"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</layer-list>