<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLittleDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.Overlay">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.Overlay.SplashScreenTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.MessageEditText">
        <item name="android:minHeight">@dimen/action_bar_height</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:hint">@string/start_typing</item>
        <item name="android:imeOptions">normal|flagNoEnterAction</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.SelectableTextView">
        <item name="android:enabled">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="AppTheme.SelfMessageLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/action_bar_height</item>
        <item name="android:layout_marginTop">@dimen/chat_margin</item>
        <item name="android:layout_marginBottom">@dimen/chat_margin</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingEnd">@dimen/chat_padding</item>
        <item name="android:paddingStart">@dimen/chat_padding</item>
        <item name="android:paddingTop">@dimen/chat_padding</item>
    </style>

    <style name="AppTheme.FriendsMessageLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">@dimen/action_bar_height</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/chat_margin</item>
        <item name="android:layout_marginBottom">@dimen/chat_margin</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingEnd">@dimen/chat_padding</item>
        <item name="android:paddingStart">@dimen/chat_padding</item>
        <item name="android:paddingTop">@dimen/chat_padding</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.DarkAccent">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

</resources>