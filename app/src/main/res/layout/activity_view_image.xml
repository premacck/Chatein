<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.prembros.chatein.ui.base.ViewImageActivity">

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/gesture_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="imageTransition"
        app:gest_rotationEnabled="true"
        app:gest_restrictRotation="true"
        app:gest_zoomEnabled="true"
        app:gest_exitEnabled="true"
        app:gest_doubleTapEnabled="true"
        app:gest_fitMethod="inside"
        app:gest_animationDuration="280"/>

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:scaleType="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/status_bar_height"
        app:srcCompat="@drawable/ic_arrow_back_shadow"
        android:contentDescription="@string/back_button" />

</RelativeLayout>
